{
  "name": "codescene-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/codescene-oss/codescene-vscode.git"
  },
  "icon": "assets/cs-logo.png",
  "displayName": "CodeScene",
  "author": "CodeScene AB",
  "publisher": "codescene",
  "description": "Integrates CodeScene analysis into VS Code. Keeps your code clean and maintainable.",
  "version": "0.26.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.1"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "CodeScene cannot work in untrusted environments because it depends on the Git extension, which cannot work in untrusted environments"
    }
  },
  "keywords": [
    "code analysis",
    "code health",
    "code review",
    "code quality",
    "code metrics",
    "cyclomatic complexity",
    "refactoring",
    "technical debt",
    "ai",
    "anthropic",
    "openai",
    "gemini",
    "gpt",
    "ai code review"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "codescene.createRulesTemplate",
        "title": "CodeScene: create Code Health Rules from template"
      },
      {
        "command": "codescene.checkRules",
        "title": "CodeScene: check Code Health Rules match for selected file",
        "when": "codescene.asyncActivationFinished"
      },
      {
        "command": "codescene.codeHealthMonitorHelp",
        "title": "CodeScene: Code Health Monitoring help",
        "icon": "$(question)"
      },
      {
        "command": "codescene.openCodeHealthDocs",
        "title": "CodeScene: open Code Health documentation"
      },
      {
        "command": "codescene.toggleReviewCodeLenses",
        "title": "CodeScene: toggle Review CodeLenses"
      },
      {
        "command": "codescene.showLogOutput",
        "title": "CodeScene: show output logs"
      },
      {
        "command": "codescene.printDevtoolsApiStats",
        "title": "CodeScene: print Devtools API stats"
      },
      {
        "command": "codescene.copyDeviceId",
        "title": "CodeScene: copy Device ID"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codescene-activity-bar",
          "title": "CodeScene",
          "icon": "$(cs-logo)"
        }
      ]
    },
    "views": {
      "codescene-activity-bar": [
        {
          "id": "codescene.statusView",
          "name": "Status",
          "type": "webview",
          "icon": "$(cs-logo)",
          "when": "false"
        },
        {
          "id": "codescene.backgroundService",
          "name": "",
          "icon": "$(cs-logo)",
          "when": "false"
        },
        {
          "id": "codescene.homeView",
          "name": "",
          "icon": "$(cs-logo)",
          "type": "webview",
          "when": "codescene.asyncActivationFinished"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codescene.codeHealthMonitorView",
        "contents": "The Code Health Monitor view compares the current state of your code and presents any introduced code smells."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codescene.codeHealthMonitorHelp",
          "when": "view === codescene.codeHealthMonitorView",
          "group": "navigation@2"
        }
      ],
      "commandPalette": []
    },
    "configuration": {
      "title": "CodeScene",
      "properties": {
        "codescene.enableReviewCodeLenses": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLenses for review diagnostics",
          "order": 1
        },
        "codescene.enableAutoRefactor": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeScene ACE",
          "order": 15
        },
        "codescene.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for CodeScene ACE. Has priority over the Sign In with CodeScene command.",
          "order": 19.5
        },
        "codescene.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "description": "Enable sending usage telemetry to CodeScene",
          "order": 20
        }
      }
    },
    "icons": {
      "cs-logo": {
        "description": "CodeScene logo",
        "default": {
          "fontPath": "assets/cs.woff",
          "fontCharacter": "\\e900"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "prepackage": "npm run updatedocs && npm run updatecwf && npm run tsc && npm run lint && npm run clean",
    "package": "NODE_ENV=production node ./esbuild.js",
    "bundle-cli": "node ./scripts/bundle-cli.js",
    "package-platform": "node ./scripts/package-platform.js",
    "clean": "rm -rf ./out",
    "build": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "tsc": "tsc -p ./",
    "lint": "eslint src --ext ts --max-warnings=0",
    "check-cwf": "test -f cs-cwf/index.html || (echo 'CWF files missing. Run: npm run updatecwf' && exit 1)",
    "maybe-check-cwf": "test -n \"$CI\" || npm run check-cwf",
    "pretest": "npm run maybe-check-cwf && npm run tsc && npm run lint && npm run build && npm run bundle-cli-test",
    "bundle-cli-test": "node ./scripts/bundle-cli-for-current-platform.js",
    "test": "mocha",
    "test:coverage": "c8 npm run test",
    "updatedocs": "fetch-github-release empear-analytics codescene-ide-protocol",
    "updatecwf": "fetch-github-release empear-analytics cs-webview ./cs-cwf",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@terascope/fetch-github-release": "^1.0.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "1.75.1",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.45.0",
    "c8": "^10.1.3",
    "esbuild": "^0.25.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.33.0",
    "glob": "^8.0.3",
    "mocha": "^10.8.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/follow-redirects": "^1.14.1",
    "@types/lodash.debounce": "^4.0.7",
    "@types/lodash.throttle": "^4.1.9",
    "@types/vscode-webview": "^1.57.5",
    "@vscode-elements/elements": "^1.8.0",
    "@vscode/codicons": "^0.0.44",
    "axios": "^1.12.0",
    "extract-zip": "^2.0.1",
    "follow-redirects": "^1.15.6",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "uuid": "^9.0.0"
  }
}
